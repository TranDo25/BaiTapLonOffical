 
@model List<GioiThieuSanPham.Models.SanPham>
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
    //    var DS_SanPham = ViewBag.listSanPham;
}


<div class="center_title_bar">danh sách sản phẩm</div>
<a href="/SanPham/ThemMoi">Thêm mới</a>
<hr />
@foreach (var item in Model)     
{
    <div class="prod_box">
        <div class="center_prod_box">
            <div class="product_title"><a href="~/SanPham/ChiTietSanPham?id=@item.ID">@item.TenSanPham</a></div>
            <div class="product_img"><a href="~/SanPham/ChiTietSanPham?id=@item.ID"><img src="~/Theme/images/taixuong.jpg" /> alt="" border="0" />
</a></div>
            <div class="prod_price">
            <span class="reduce">@string.Format("{0:#,0}", item.GiaBanCu) đ</span> 
            <span class="price">@string.Format("{0:#,0}", @item.GiaBanMoi) đ</span></div>
        </div>
        <div class="prod_details_tab"> 
        <a href="#"onclick="if (confirm('bạn có chắc chắn muốn xóa không?') == true) { location.href='/SanPham/Xoa?id=@item.ID'}" class="prod_buy">Xóa</a> 
        <a href="~/SanPham/ChiTietSanPham?id=@item.ID" class="prod_details">Chi tiết</a> </div>
    </div>
}



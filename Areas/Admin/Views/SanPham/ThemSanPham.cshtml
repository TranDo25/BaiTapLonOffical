@model GioiThieuSanPham.Models.SanPhamModel

@{
    ViewBag.Title = "Lưu sản phẩm mới";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<h2>Thêm sản phẩm</h2>

@using (Html.BeginForm("LuuSanPhamMoi", "SanPham", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <div class="form-group">
        @*@Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label>ID</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*@Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label>Tên sản phẩm</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control", @id = "txtTen" } })
            @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Giá cũ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GiaCu, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.GiaCu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Giá mới</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GiaMoi, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.GiaMoi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Hãng sản xuất</label>
        <div class="col-md-10">
            <select name="HangSanXuat">
                @*value là dữ liệu sẽ được đưa vào csdl*@
                <option value="Toshiba">Toshiba 1</option>
                <option value="Sam sung">Sam sung 2</option>
                <option value="Thống nhất">Thống nhất 3</option>
                <option value="Apple">Apple</option>
            </select>
            @Html.ValidationMessageFor(model => model.HangSanXuat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Số tháng bảo hành</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoTHangBaoHanh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoTHangBaoHanh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Tóm tắt thông tin</label>
        <div class="col-md-10">
            <textarea name="TomTatThongTin"></textarea>
            @*@Html.TextAreaFor(model => model.TomTatThongTin, new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.TomTatThongTin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Hạn sử dụng</label>
        <div class="col-md-10">
            <input type="date" name="NgayHetHan" value="@string.Format("{0:yyyy-MM-dd HH:mm}",DateTime.Now)" />
            @*@Html.TextAreaFor(model => model.TomTatThongTin, new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>Màu sắc</label>
        <div class="col-md-10">
            <input type="color" name="MauSac" value="#ffff2f" />
            @*@Html.TextAreaFor(model => model.TomTatThongTin, new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>Gmail</label>
        <div class="col-md-10">
            <input type="email" />
            @*@Html.TextAreaFor(model => model.TomTatThongTin, new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>Kích hoạt</label>
        <div class="col-md-10">
            <input type="checkbox" />
            @*@Html.TextAreaFor(model => model.TomTatThongTin, new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>tình trạng sản phẩm</label>
        <div class="col-md-10">
            <span>Mới</span>
            <input type="radio" value="mới" name="TinhTrang" />
            <span>Cũ</span>
            <input type="radio" value="cũ" name="TinhTrang" />
            @*@Html.TextAreaFor(model => model.TomTatThongTin, new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
        </div>
    </div>
    @*<div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="checkbox" value="true" name="kichHoat" />
        </div>
    </div>*@
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
